              $ext = strtolower(pathinfo($_FILES['service_image_1']['name'], PATHINFO_EXTENSION));
              $target_dir = "uploads/cms/";
              $file_name = time() . '_service_image_3.' . $ext;
              $target_file = $target_dir . $file_name;
              move_uploaded_file($_FILES["service_image_3"]["tmp_name"], $target_file);

              $getData['service_image_3'] = $file_name;
              }

             */

            if(variable_array_check($this->input->post('artist_id'))) {

                $artist_id_array = $this->input->post('artist_id');
                $artist_text_array = $this->input->post('artist_text');

                $table = 'ds_homepage_artist_banners';

                for ($i = 0; $i < count($artist_id_array); $i++) {

                    $ext = strtolower(pathinfo($_FILES['artist_banner']['name'][$i], PATHINFO_EXTENSION));
                    $target_dir = "uploads/cms/";
                    $file_name = time() . '_banner_image.' . $ext;
                    $target_file = $target_dir . $file_name;
                    move_uploaded_file($_FILES["artist_banner"]["tmp_name"][$i], $target_file);

                    $getData['banner_image_3'] = $file_name;

                    $row = [
                        'artist_id' => $artist_id_array[$i],
                        'artist_text' => $artist_text_array[$i],
                        'banner' => $file_name
                    ];
                    $this->common_model->AddRecord($row, $table);
                }
            }

            $this->common_model->UpdateRecord($getData, 'ds_cms_home', 'id', '1');
            $message = '<div class="alert alert-success"><p>Successfully updated.</p></div>';
            $this->session->set_flashdata('success', $message);
            redirect('admin/cms_management/edit_index');
        }

        $data['query'] = $this->common_model->RetriveRecordByWhereRow('ds_cms_home', array('id' => '1'));

        $data['artist_details'] = $this->common_model->RetriveRecordByWhere('ds_users', array('role_id' => '1'));

        $select = 'BAN.*, USR.first_name, USR.last_name, CUN.country_name';
        $table = 'ds_homepage_artist_banners AS BAN';
        $join_table = array('ds_users AS USR', 'ds_users_address AS ADD', 'ds_country AS CUN');
        $join_on = array('USR.id = BAN.artist_id', 'ADD.user_id = BAN.artist_id', 'CUN.id = USR.country_id');
        $join_name = array('left', 'left', 'left');
        $where = array();
        $order = 'BAN.id ASC';

        $data['artist_list'] = $this->custom_dev_model->select_table_joinTable_joinOn_joinName_where_order($select, $table, $join_table, $join_on, $join_name, $where, $order);

        $this->load->view('cms/edit-index', $data);
    }

    public function homepage_banner_delete($id)
    {

        $this->custom_dev_model->delete_table_where('ds_homepage_artist_banners', array('id' => $id));
        $message = '<div class="alert alert-success"><p>Successfully deleted artist banner.</p></div>';
        $this->session->set_flashdata('success', $message);
        redirect('admin/cms_management/edit_index');
    }

