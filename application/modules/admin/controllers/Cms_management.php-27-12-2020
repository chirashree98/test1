<?php

defined('BASEPATH') or exit('No direct script access allowed');

class Cms_management extends MX_Controller
{

    public function __construct()
    {
        parent::__construct();
        $this->load->helper(array('url', 'form', 'html', 'text'));
        $this->load->library(array('session', 'form_validation', 'email', 'upload', 'image_lib'));
        $this->load->model(array('common_model', 'custom_model'));
        if ($this->session->userdata('ADMIN_ID') == '') {
            redirect('admin');
        }
    }

    public function edit_shop_details_footer()
    {
        if ($_POST) {
            $data = array();
            $id = $this->input->post('id');
            $getData = array(
                'banner_heading' => $this->input->post('banner_heading'),
                'banner_content ' => $this->input->post('banner_content'),
                'banner_url' => $this->input->post('banner_url'),
                'banner_text' => $this->input->post('banner_text')
            );
            //print_r($getData);

            if ($_FILES['banner_image']['name'] != '') {
                $ext = strtolower(pathinfo($_FILES['banner_image']['name'], PATHINFO_EXTENSION));
                $target_dir = "uploads/cms/";
                $file_name = time() . '_banner_image.' . $ext;
                $target_file = $target_dir . $file_name;
                move_uploaded_file($_FILES["banner_image"]["tmp_name"], $target_file);

                $getData['banner_image'] = $file_name;
            }
            $this->common_model->UpdateRecord($getData, 'ds_cms_shop_footer', 'id', $id);


            if ($_POST) {
                $query = $this->db->select('ds_cms_shop_footer.*')
                    ->from('ds_cms_shop_footer')
                    ->where(array('id' => 1))
                    ->get();
                $chkUserExist = $query->num_rows();


                if ($chkUserExist == 0) {
                    $getData = array(
                        'banner_heading' => $this->input->post('banner_heading'),
                        'banner_content ' => $this->input->post('banner_content '),
                        'banner_url' => $this->input->post('banner_url'),
                        'banner_text' => $this->input->post('banner_text')
                    );
                    if ($_FILES['banner_image']['name'] != '') {
                        $ext = strtolower(pathinfo($_FILES['banner_image']['name'], PATHINFO_EXTENSION));
                        $target_dir = "uploads/cms/";
                        $file_name = time() . '_banner_image.' . $ext;
                        $target_file = $target_dir . $file_name;
                        move_uploaded_file($_FILES["banner_image"]["tmp_name"], $target_file);

                        $getData['banner_image'] = $file_name;
                    }
                    $this->common_model->AddRecord($getData, 'ds_cms_shop_footer');
                }
                $message = '<div class="alert alert-success"><p> Footer section Advertisement Banner has been successfully updated.</p></div>';
                $this->session->set_flashdata('success', $message);
            }
        }
        $data['query'] = $this->common_model->RetriveRecordByWhereRow('ds_cms_shop_footer', array('id' => '1'));
        $this->load->view('cms/shop-details-banner', $data);
    }

    public function edit_product_all()
    {
        if ($_POST) {
            $data = array();
            $id = $this->input->post('id');
            $getData = array(
                'title' => $this->input->post('title'),
                'description' => $this->input->post('description'),
                'banner_heading' => $this->input->post('banner_heading'),
                'banner_content ' => $this->input->post('banner_content'),
                'banner_url' => $this->input->post('banner_url'),
                'banner_text' => $this->input->post('banner_text')
            );
            //print_r($getData);

            if ($_FILES['banner_image']['name'] != '') {
                $ext = strtolower(pathinfo($_FILES['banner_image']['name'], PATHINFO_EXTENSION));
                $target_dir = "uploads/cms/";
                $file_name = time() . '_banner_image.' . $ext;
                $target_file = $target_dir . $file_name;
                move_uploaded_file($_FILES["banner_image"]["tmp_name"], $target_file);

                $getData['banner_image'] = $file_name;
            }
            $this->common_model->UpdateRecord($getData, 'ds_cms_all_products', 'id', $id);


            if ($_POST) {
                $query = $this->db->select('ds_cms_all_products.*')
                    ->from('ds_cms_all_products')
                    ->where(array('id' => 1))
                    ->get();
                $chkUserExist = $query->num_rows();


                if ($chkUserExist == 0) {
                    $getData = array(
                        'title' => $this->input->post('title'),
                        'description' => $this->input->post('description'),
                        'banner_heading' => $this->input->post('banner_heading'),
                        'banner_content ' => $this->input->post('banner_content '),
                        'banner_url' => $this->input->post('banner_url'),
                        'banner_text' => $this->input->post('banner_text')
                    );
                    if ($_FILES['banner_image']['name'] != '') {
                        $ext = strtolower(pathinfo($_FILES['banner_image']['name'], PATHINFO_EXTENSION));
                        $target_dir = "uploads/cms/";
                        $file_name = time() . '_banner_image.' . $ext;
                        $target_file = $target_dir . $file_name;
                        move_uploaded_file($_FILES["banner_image"]["tmp_name"], $target_file);

                        $getData['banner_image'] = $file_name;
                    }
                    $this->common_model->AddRecord($getData, 'ds_cms_all_products');
                }
                $message = '<div class="alert alert-success"><p> Product section  has been successfully updated.</p></div>';
                $this->session->set_flashdata('success', $message);
            }
        }
        $data['query'] = $this->common_model->RetriveRecordByWhereRow('ds_cms_all_products', array('id' => '1'));
        $this->load->view('cms/edit-product', $data);
    }

