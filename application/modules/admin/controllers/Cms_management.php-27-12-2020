    public function add_faq()
    {
        if ($_POST) {
            $data = array();
            $id = $this->input->post('id');
            $getData = array(
                'question' => $this->input->post('question'),
                'answer' => $this->input->post('answer')


            );

            $this->common_model->AddRecord($getData, 'ds_cms_faq_question');

            $message = '<div class="alert alert-success"><p> FAQ Section has been successfully updated.</p></div>';
            $this->session->set_flashdata('success', $message);
            redirect('admin/cms_management/show_faq');
        }
        $this->load->view('cms/add-faq-question');

    }

    public function delete_faq()
    {
        $id = $this->uri->segment(4);
        $this->common_model->Delete('ds_cms_faq_question', $id, 'id');
        $message = '<div class="alert alert-success"><p>Faq Queshas been deleted successfully.</p></div>';
        $this->session->set_flashdata('success', $message);
        redirect('admin/cms_management/show_faq');
    }

    public function edit_faq_question()
    {
        $id = $this->uri->segment(4);
        if ($_POST) {
            $data = array();
            $id = $this->uri->segment(4);
            $getData = array(

                'question' => $this->input->post('question'),
                'answer' => $this->input->post('answer'),


            );
//print_r($getData);

            $message = '<div class="alert alert-success"><p> FAQ Section has been successfully updated.</p></div>';
            $this->session->set_flashdata('success', $message);
            $this->common_model->UpdateRecord($getData, 'ds_cms_faq_question', 'id', $id);
            redirect('admin/cms_management/show_faq');


        }

        $data['query'] = $this->common_model->RetriveRecordByWhereRow('ds_cms_faq_question', array('id' => $id));
        $this->load->view('cms/edit-faq-question', $data);

    }

    public function show_faq()
    {
        $this->db->from('ds_cms_faq_question');
        $this->db->order_by('ds_cms_faq_question.id', 'DESC');

        $data['faq'] = $this->db->get();
        $this->load->view('cms/show-faq', $data);
    }

    public function edit_faq()
    {
        if ($_POST) {
            $data = array();
            $id = $this->input->post('id');
            $getData = array(

                'heading' => $this->input->post('heading'),
                'sub_heading' => $this->input->post('sub_heading'),


            );
//print_r($getData);

            if ($_FILES['banner_image']['name'] != '') {
                $ext = strtolower(pathinfo($_FILES['banner_image']['name'], PATHINFO_EXTENSION));
                $target_dir = "uploads/cms/";
                $file_name = time() . '_banner_image.' . $ext;
                $target_file = $target_dir . $file_name;
                move_uploaded_file($_FILES["banner_image"]["tmp_name"], $target_file);

                $getData['banner_image'] = $file_name;
            }
            $this->common_model->UpdateRecord($getData, 'ds_cms_faq', 'id', $id);


            if ($_POST) {
                $query = $this->db->select('ds_cms_faq.*')
                    ->from('ds_cms_faq')
                    ->where(array('id' => 1))
                    ->get();
                $chkUserExist = $query->num_rows();


                if ($chkUserExist == 0) {
                    $getData = array(
                        'heading' => $this->input->post('heading'),
                        'sub_heading' => $this->input->post('sub_heading'),


                    );
                    if ($_FILES['banner_image']['name'] != '') {
                        $ext = strtolower(pathinfo($_FILES['banner_image']['name'], PATHINFO_EXTENSION));
                        $target_dir = "uploads/cms/";
                        $file_name = time() . '_banner_image.' . $ext;
                        $target_file = $target_dir . $file_name;
                        move_uploaded_file($_FILES["banner_image"]["tmp_name"], $target_file);

                        $getData['banner_image'] = $file_name;
                    }
                    $this->common_model->AddRecord($getData, 'ds_cms_faq');

                }
                $message = '<div class="alert alert-success"><p> FAQ Section has been successfully updated.</p></div>';
                $this->session->set_flashdata('success', $message);
            }
        }
        $data['query'] = $this->common_model->RetriveRecordByWhereRow('ds_cms_faq', array('id' => '1'));
        $this->load->view('cms/edit-faq', $data);

    }
}
