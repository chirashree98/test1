            }
        }
        $data['query'] = $this->common_model->RetriveRecordByWhereRow('ds_cms_shipping_policy', array('id' => '1'));
        $this->load->view('cms/edit-shipping-policy', $data);
    }

    public function contact_request()
    {
        $data = array();
        $this->db->select('contact_msg.*');
        $this->db->from('contact_msg');
        $this->db->order_by('contact_msg.id', 'DESC');
        $data['query'] = $this->db->get();
        $this->load->view('cms/contact-request', $data);
    }

    public function contact_us()
    {
        $data = array();
        $this->db->select('ds_cms_contact_details.*');
        $this->db->from('ds_cms_contact_details');
        $this->db->order_by('ds_cms_contact_details.id', 'DESC');
        $data['query'] = $this->db->get();
        $this->load->view('cms/contact-details', $data);
    }

    public function edit_contacts()
    {


        if ($_POST) {
            $data = array();
            $id = $this->input->post('id');
            $getData = array(
                'heading' => $this->input->post('heading'),
                'sub_heading ' => $this->input->post('sub_heading'),
                'address' => $this->input->post('address'),
                'email' => $this->input->post('email'),
                'phone' => $this->input->post('phone')
            );
            if ($_FILES['banner_image']['name'] != '') {
                $ext = strtolower(pathinfo($_FILES['banner_image']['name'], PATHINFO_EXTENSION));
                $target_dir = "uploads/cms/";
                $file_name = time() . '_banner_image.' . $ext;
                $target_file = $target_dir . $file_name;
                move_uploaded_file($_FILES["banner_image"]["tmp_name"], $target_file);

                $getData['banner_image'] = $file_name;
            }
            $this->common_model->UpdateRecord($getData, 'ds_cms_contact', 'id', $id);


            if ($_POST) {
                $query = $this->db->select('ds_cms_contact.*')
                    ->from('ds_cms_contact')
                    ->where(array('id' => 1))
                    ->get();
                $chkUserExist = $query->num_rows();


                if ($chkUserExist == 0) {
                    $id = $this->input->post('id');
                    $getData = array(
                        'heading' => $this->input->post('heading'),
                        'sub_heading ' => $this->input->post('sub_heading'),
                        'title' => $this->input->post('title'),
                        'address' => $this->input->post('address'),
                        'email' => $this->input->post('email'),
                        'phone' => $this->input->post('phone')
                    );
                    if ($_FILES['banner_image']['name'] != '') {
                        $ext = strtolower(pathinfo($_FILES['banner_image']['name'], PATHINFO_EXTENSION));
                        $target_dir = "uploads/cms/";
                        $file_name = time() . '_banner_image.' . $ext;
                        $target_file = $target_dir . $file_name;
                        move_uploaded_file($_FILES["banner_image"]["tmp_name"], $target_file);

                        $getData['banner_image'] = $file_name;
                    }
                    $this->common_model->AddRecord($getData, 'ds_cms_contact');
                }
                $message = '<div class="alert alert-success"><p> Contact section has been successfully updated.</p></div>';
                $this->session->set_flashdata('success', $message);
            }
        }
        $data['query'] = $this->common_model->RetriveRecordByWhereRow('ds_cms_contact', array('id' => '1'));
        $this->load->view('cms/edit-contact', $data);
    }

    public function delete_contact()
    {
        echo $id = $this->uri->segment(4);

        $this->common_model->Delete('ds_cms_contact_details', $id, 'id');
        $message = '<div class="alert alert-success"><p>User contact Details has been deleted successfully.</p></div>';
        $this->session->set_flashdata('success', $message);
        redirect('admin/cms_management/contact_us');
    }

