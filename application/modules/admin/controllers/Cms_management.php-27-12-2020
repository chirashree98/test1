    public function edit_shop_header()
    {
        if ($_POST) {
            $data = array();
            $id = $this->input->post('id');
            $getData = array(
                'title' => $this->input->post('title'),
                'description' => $this->input->post('description')
            );
            //print_r($getData);


            $this->common_model->UpdateRecord($getData, 'ds_cms_header_shop_setting', 'id', $id);


            if ($_POST) {
                $query = $this->db->select('ds_cms_header_shop_setting.*')
                    ->from('ds_cms_header_shop_setting')
                    ->where(array('id' => 1))
                    ->get();
                $chkUserExist = $query->num_rows();


                if ($chkUserExist == 0) {
                    $getData = array(
                        'title' => $this->input->post('title'),
                        'description' => $this->input->post('description')
                    );

                    $this->common_model->AddRecord($getData, 'ds_cms_header_shop_setting');
                }
                $message = '<div class="alert alert-success"><p> Shop Header section  has been successfully updated.</p></div>';
                $this->session->set_flashdata('success', $message);
            }
        }
        $data['query'] = $this->common_model->RetriveRecordByWhereRow('ds_cms_header_shop_setting', array('id' => '1'));
        $this->load->view('cms/edit-shop-header', $data);
    }

