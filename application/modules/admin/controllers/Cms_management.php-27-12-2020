                'message_heading' => $this->input->post('message_heading'),
                'message_content' => $this->input->post('message_content'),
            );


//            echo "<pre>";


            if ($_FILES['banner_image_1']['name'] != '') {
                $ext = strtolower(pathinfo($_FILES['banner_image_1']['name'], PATHINFO_EXTENSION));
                $target_dir = "uploads/cms/";
                $file_name = time() . '_banner_image.' . $ext;
                $target_file = $target_dir . $file_name;
                move_uploaded_file($_FILES["banner_image_1"]["tmp_name"], $target_file);

                $getData['banner_image_1'] = $file_name;
            }

            if ($_FILES['banner_image_2']['name'] != '') {
                $ext = strtolower(pathinfo($_FILES['banner_image_2']['name'], PATHINFO_EXTENSION));
                $target_dir = "uploads/cms/";
                $file_name = time() . '_banner_image.' . $ext;
                $target_file = $target_dir . $file_name;
                move_uploaded_file($_FILES["banner_image_2"]["tmp_name"], $target_file);

                $getData['banner_image_2'] = $file_name;
