                $ext = strtolower(pathinfo($_FILES['banner_image_3']['name'], PATHINFO_EXTENSION));
                $target_dir = "uploads/cms/";
                $file_name = time() . '_banner_image.' . $ext;
                $target_file = $target_dir . $file_name;
                move_uploaded_file($_FILES["banner_image_3"]["tmp_name"], $target_file);

                $getData['banner_image_3'] = $file_name;
            }

            if ($_FILES['ad_banner_image']['name'] != '') {
                $ext = strtolower(pathinfo($_FILES['ad_banner_image']['name'], PATHINFO_EXTENSION));
                $target_dir = "uploads/cms/";
                $file_name = time() . '_banner_image.' . $ext;
                $target_file = $target_dir . $file_name;
                move_uploaded_file($_FILES["ad_banner_image"]["tmp_name"], $target_file);

                $getData['ad_banner_image'] = $file_name;
            }


            for ($i = 0; $i < count($_POST['client_name']); $i++) {
                if ($_FILES['client_image']['name'][$i] != '') {
                    $ext = strtolower(pathinfo($_FILES['client_image']['name'][$i], PATHINFO_EXTENSION));
                    $target_dir = "uploads/cms/";
                    $file_name = time() . $i . '_home_icon.' . $ext;
                    $target_file = $target_dir . $file_name;
                    move_uploaded_file($_FILES["client_image"]["tmp_name"][$i], $target_file);

                    $client_image[] = $file_name;
                } else {
                    $client_image[] = $_POST['old_client_image'][$i];
                }
            }
            $getData['client_image'] = json_encode($client_image);

            /*

              if ($_FILES['service_image_1']['name'] != '') {
              $ext = strtolower(pathinfo($_FILES['service_image_1']['name'], PATHINFO_EXTENSION));
              $target_dir = "uploads/cms/";
